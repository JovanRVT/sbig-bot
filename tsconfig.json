{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "es2022",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "allowJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "files": ["env.d.ts"]
}
